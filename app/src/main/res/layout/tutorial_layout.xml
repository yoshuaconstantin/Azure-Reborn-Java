<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/NeoBG">

    <ViewFlipper

        android:id="@+id/flip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        tools:ignore="UselessParent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="@drawable/part1">

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="@drawable/part2">

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="@drawable/part3">

        </RelativeLayout>

    </ViewFlipper>
    <LinearLayout
        android:layout_below="@id/flip1"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <ImageButton
                android:id="@+id/buttonPrev"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@null"
                android:onClick="previousview"
                android:src="@drawable/prev"
                android:visibility="visible" />

        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:background="@null"
            android:onClick="nextpreview"
            android:src="@drawable/next"
            android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>