<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightWhite">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_270sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="ver 1.1"
            android:textSize="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_3sdp"/>
<ImageView
    android:layout_width="@dimen/_190sdp"
    android:layout_height="@dimen/_230sdp"
    android:src="@drawable/dozesleep"
    android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/imag1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/dozemanager" />

        <TextView
            android:id="@+id/dozetext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imag1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Hello,"
            android:textColor="#3147eb"
            android:textSize="15sp" />

        <TextView
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/dozemanagertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dozetext1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="I'm Doze Manager"
            android:textColor="#3147eb"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:textColor="#3147eb"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dozemanagertext"
            android:text="Current Mode :"
            android:id="@+id/curremtmode"/>

        <TextView
            android:id="@+id/modetextdoze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/curremtmode"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/aristoncomic"
            android:text="MODE"
            android:textColor="#3147eb"
            android:textSize="@dimen/_30sdp" />

        <TextView
            android:id="@+id/asking1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_40sdp"
            android:fontFamily="@font/nunito_sans_italic"
            android:text="What kind of profile you want to use ?"
            android:textColor="#3147eb"
            android:textSize="30sp"
            android:textStyle="bold" />
<RelativeLayout
    android:layout_width="@dimen/_280sdp"
    android:layout_height="@dimen/_30sdp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="#FFDEE7FD">
        <TextView
            android:id="@+id/dozetext2"
            android:textStyle="normal"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Doze Information"
            android:textColor="#3147eb"
            android:textSize="@dimen/_10sdp"
           android:fontFamily="@font/kronika" />
    <TextView
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="#3147eb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tap text below"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/_7sdp"/>

</RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeinfo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <HorizontalScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/defaultdoze"
                    android:fontFamily="@font/gravitybook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:text="Default Doze"
                    android:textColor="#3147eb"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/customdozeinfo"
                    android:fontFamily="@font/gravitybook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:text="Custom Doze"
                    android:textColor="#3147eb"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lightdozeinfo"
                    android:fontFamily="@font/gravitybook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:text="Light Doze"
                    android:textColor="#3147eb"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/deepdozeinfo"
                    android:fontFamily="@font/gravitybook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:text="Deep Doze"
                    android:textColor="#3147eb"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/gimmicdozeinfo"
                    android:fontFamily="@font/gravitybook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:text="Gimmick Deep Doze"
                    android:textColor="#3147eb"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/endrelative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/relativeinfo"
        app:layout_constraintStart_toStartOf="@id/relativeinfo"
        app:layout_constraintTop_toBottomOf="@+id/relativeinfo">

        <HorizontalScrollView
            android:overScrollMode="never"
            android:scrollbars="none"
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout

                android:layout_width="@dimen/_200sdp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bluecorener"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Doze"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/fruitstories"
                    android:textSize="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAP TO ACTIVE"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:fontFamily="@font/jester"
                    android:textColor="@color/white"/>


                    <com.varunest.sparkbutton.SparkButton
                        android:id="@+id/customdoze"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"

                        app:sparkbutton_activeImage="@drawable/taptoactive"
                        app:sparkbutton_animationSpeed="1"
                        app:sparkbutton_iconSize="100dp"
                        app:sparkbutton_inActiveImage="@drawable/taptoactive"
                        app:sparkbutton_primaryColor="@color/gray"
                        app:sparkbutton_secondaryColor="@color/green" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="@dimen/_200sdp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bluecorener"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light Doze"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/fruitstories"
                    android:textSize="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAP TO ACTIVE"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:fontFamily="@font/jester"
                    android:textColor="@color/white"/>
                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/lightdoze"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    app:sparkbutton_activeImage="@drawable/taptoactive"
                    app:sparkbutton_animationSpeed="1"
                    app:sparkbutton_iconSize="100dp"
                    app:sparkbutton_inActiveImage="@drawable/taptoactive"
                    app:sparkbutton_primaryColor="@color/primary_color"
                    app:sparkbutton_secondaryColor="@color/second_primary_color" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="@dimen/_200sdp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bluecorener"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deep Doze"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/fruitstories"
                    android:textSize="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAP TO ACTIVE"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:fontFamily="@font/jester"
                    android:textColor="@color/white"/>
                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/deepdoze"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    app:sparkbutton_activeImage="@drawable/taptoactive"
                    app:sparkbutton_animationSpeed="1"
                    app:sparkbutton_iconSize="100dp"
                    app:sparkbutton_inActiveImage="@drawable/taptoactive"
                    app:sparkbutton_primaryColor="@color/bluelight"
                    app:sparkbutton_secondaryColor="@color/Darker_seaBlue" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="@dimen/_200sdp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bluecorener"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gimmick Doze"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/fruitstories"
                    android:textSize="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAP TO ACTIVE"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:fontFamily="@font/jester"
                    android:textColor="@color/white"/>
                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/gimmicdoze"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    app:sparkbutton_activeImage="@drawable/active"
                    app:sparkbutton_animationSpeed="1"
                    app:sparkbutton_iconSize="100dp"
                    app:sparkbutton_inActiveImage="@drawable/taptoactive"
                    app:sparkbutton_primaryColor="@color/light_pink"
                    app:sparkbutton_secondaryColor="@color/lilbit_yellow" />

            </RelativeLayout>
        </LinearLayout>


        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>