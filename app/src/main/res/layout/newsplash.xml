<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bluegrapegrad">


        <ImageView
            android:id="@+id/imgstart"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_130sdp"
            android:src="@drawable/azurenewlogo_round" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Azure\nMade\nSimpler"
            android:textSize="@dimen/_45ssp"
            android:id="@+id/textazure"
            android:layout_below="@id/imgstart"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/poesten"
            android:textColor="#242626"/>

        <TextView
            android:id="@+id/text2azure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textazure"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/raleway_light"
            android:text="Take advantage of all the features and\nmodes to satisfy your needs with Azure"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your processor type"
            android:layout_below="@id/text2azure"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/NeoBG"
            android:layout_marginTop="@dimen/_5sdp"/>

        <soup.neumorphism.NeumorphCardView

            android:layout_below="@id/text2azure"
            android:id="@+id/sd888button"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:padding="12dp"
            app:neumorph_backgroundColor="@color/NeoBG"
            app:neumorph_shadowColorDark="@color/NeoShadow"
            app:neumorph_shadowColorLight="@color/NeoLightShadow"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
            app:neumorph_shapeType="flat"
            app:neumorph_strokeColor="@color/NeoBG"
            app:neumorph_strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/sd888img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:contentDescription="TODO"
                    android:src="@drawable/sd888"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/sd888text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:fontFamily="@font/raleway_light"
                    android:text="SD 888"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sdtaptoselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sd888text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Tap to Select"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/sdstatuslight"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:contentDescription="TODO"
                    android:src="@drawable/defaultoff"
                    tools:ignore="ContentDescription" />


            </RelativeLayout>


        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView

            android:layout_toEndOf="@id/sd888button"
            android:layout_below="@id/text2azure"
            android:id="@+id/MTKbutton"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:padding="12dp"
            app:neumorph_backgroundColor="@color/NeoBG"
            app:neumorph_shadowColorDark="@color/NeoShadow"
            app:neumorph_shadowColorLight="@color/NeoLightShadow"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
            app:neumorph_shapeType="flat"
            app:neumorph_strokeColor="@color/NeoBG"
            app:neumorph_strokeWidth="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dm1200img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:contentDescription="TODO"
                    android:src="@drawable/dm1200"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/dm1200text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:fontFamily="@font/raleway_light"
                    android:text="DM 1200"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dm1200taptoselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dm1200text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Tap to Select"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/dm1200status"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:contentDescription="TODO"
                    android:src="@drawable/defaultoff"
                    tools:ignore="ContentDescription" />


            </RelativeLayout>


        </soup.neumorphism.NeumorphCardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>